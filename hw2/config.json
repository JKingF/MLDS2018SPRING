{
    "name": "seq2seq",
    "task": "caption",
    "cuda": true,
    "embedder": {
        "type": "OneHotEmbedder",
        "min_count": 4
    },
    "data_loader": {
        "batch_size": 8,
        "sample_range": [20, 80],
        "shuffle": true
    },
    "validation": {
        "validation_split": 0.1,
        "shuffle": true
    },
    "optimizer_type": "RMSprop",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.0
    },
    "loss": "cross_entropy",
    "metrics": ["bleu"],
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 10,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "arch": "Seq2Seq",
    "model": {
        "rnn_type": "LSTM",
        "input_size": 4096,
        "hidden_size": 512,
        "encoder": {
            "layers": 2,
            "dropout": 0.2,
            "bidirectional": false
        },
        "decoder": {
            "layers": 2,
            "dropout": 0.2
        },
        "attention": false,
        "scheduled_sampling": 0.5
    }
}
