{
    "name": "0000000000000006",
    "task": "caption",
    "cuda": true,
    "embedder": {
        "type": "OneHotEmbedder",
        "emb_size": 1024
    },
    "data_loader": {
        "data_dir": "datasets/",
        "batch_size": 8,
        "sample_range": [20, 80],
        "shuffle": true
    },
    "validation": {
        "validation_split": 0.1,
        "shuffle": true
    },
    "optimizer_type": "RMSprop",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 1e-3
    },
    "loss": "cross_entropy3",
    "metrics": ["bleu"],
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 10,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "arch": "Seq2Seq",
    "model": {
        "rnn_type": "LSTM",
        "input_size": 4096,
        "hidden_size": 256,
        "encoder": {
            "layers": 1,
            "dropout": 0.5,
            "bidirectional": true
        },
        "decoder": {
            "layers": 2,
            "dropout": 0.2
        },
        "attention": false,
        "scheduled_sampling": 0.5
    }
}
