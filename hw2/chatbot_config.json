{
    "name": "chatbot00001",
    "task": "chatbot",
    "cuda": true,
    "embedder": {
        "type": "ChineseOneHotEmbedder"
    },
    "data_loader": {
        "batch_size": 64,
        "train_seq_count": 40000,
        "shuffle": true
    },
    "validation": {
        "validation_split": 0.1,
        "shuffle": true
    },
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.001,
        "weight_decay": 0
    },
    "loss": "cross_entropy",
    "metrics": ["perplexity", "correlation"],
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 2,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "arch": "Seq2Seq",
    "model": {
        "rnn_type": "LSTM",
        "input_size": 1024,
        "hidden_size": 256,
        "encoder": {
            "layers": 2,
            "dropout": 0.2,
            "bidirectional": false
        },
        "decoder": {
            "layers": 2,
            "dropout": 0.2,
            "attnkey_dropout": 0.2
        },
        "attention": true,
        "scheduled_sampling": 0.2
    }
}
