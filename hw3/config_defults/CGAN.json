{
    "name": "CGAN00001",
    "arch": "CGAN",
    "note": "",
    "cuda": true,
    "tips": {
        "01": {
            "desc": "normalize input images",
            "note": "toggle not implemented",
            "enabled": true
        },
        "02": {
            "desc": "modified loss function",
            "note": "use [max log(D)] instead of [min log(1-D)]",
            "enabled": false
        },
        "03": {
            "desc": "gaussian input noise",
            "note": "toggle not implemented",
            "enabled": true
        },
        "04": {
            "desc": "batch normalization",
            "generator": {
                "enabled": true
            },
            "discriminator": {
                "enabled": true
            }
        },
        "05": {
            "desc": "avoid sparse gradients",
            "note": "if enabled, use the specified non-linearity, otherwise ignore the configs",
            "enabled": true,
            "generator": {
                "type": "ReLU",
                "config": {
                    "inplace": true
                }
            },
            "discriminator": {
                "type": "LeakyReLU",
                "config": {
                    "negative_slope": 0.2,
                    "inplace": true
                }
            }
        },
        "06": {
            "desc": "soft and noisy labels",
            "note": "toggle not implemented",
            "enabled": false
        },
        "09": {
            "desc": "use Adam optimizer",
            "note": "toggle not implemented",
            "enabled": true
        },
        "13": {
            "desc": "noise to inputs to D with decay",
            "note": "if not enabled, configs are ignored",
            "enabled": false,
            "config": {
                "var": 0.02,
                "decay": "lambda noise, epoch: noise * (0.95 ** epoch)"
            }
        },
        "14": {
            "desc": "train discriminator more",
            "note": "if not enabled, configs are ignored",
            "enabled": false,
            "config": {
                "dis_iter": 1,
                "gen_iter": 1
            }
        },
        "17": {
            "desc": "dropouts in G",
            "note": "the dropout rate is the same specified as in arXiv:1611.07004",
            "enabled": false,
            "rate": 0.5
        }
    },
    "data_loader": {
        "data_dir1": "datasets/AnimeDataset/faces/",
        "data_dir2": "datasets/extra_data/images/",
        "batch_size": 128,
        "shuffle": true
    },
    "validation": {
        "validation_split": 0.1,
        "shuffle": true
    },
    "model": {
        "noise_dim": 100,
        "embed_dim": 256
    },
    "optimizers": {
        "generator": {
            "type": "Adam",
            "config": {
                "lr": 0.0002,
                "betas": [0.5, 0.999]
            }
        },
        "discriminator": {
            "type": "Adam",
            "config": {
                "lr": 0.0002,
                "betas": [0.5, 0.999]
            }
        }
    },
    "metrics": [
        "accuracy"
    ],
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 2,
        "verbosity": 2,
        "save_best": false
    }
}