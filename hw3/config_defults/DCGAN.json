{
    "name": "DCGAN",
    "note": "Same configurations as in 'Unsupervised Representation Learning with Deep Convolutional Generative Adversarial Networks (ICLR'16)'",
    "cuda": true,
    "tips": {
        "01": {
            "desc": "normalize input images",
            "note": "toggle not implemented",
            "enabled": true
        },
        "02": {
            "desc": "modified loss function",
            "note": "toggle not implemented",
            "enabled": false
        },
        "03": {
            "desc": "gaussian input noise",
            "note": "toggle not implemented",
            "enabled": true
        },
        "04": {
            "desc": "batch normalization",
            "note": "toggle not implemented",
            "enabled": true
        },
        "05": {
            "desc": "avoid sparse gradients",
            "enabled": true,
            "type": "LeakyReLU",
            "config": {
                "negative_slope": 0.2,
                "inplace": true
            }
        },
        "06": {
            "desc": "soft and noisy labels",
            "note": "toggle not implemented",
            "enabled": false
        },
        "09": {
            "desc": "use Adam optimizer",
            "note": "toggle not implemented",
            "enabled": true
        },
        "13": {
            "desc": "noise to inputs to D with decay",
            "enabled": false,
            "config": {
                "var": 0.02,
                "decay": "lambda noise, epoch: noise * (0.95 ** epoch)"
            }
        },
        "14": {
            "desc": "train discriminator more",
            "enabled": false,
            "config": {
                "dis_iter": 1,
                "gen_iter": 1
            }
        },
        "17": {
            "desc": "dropouts in G",
            "note": "toggle not implemented",
            "enabled": false
        }
    },
    "data_loader": {
        "data_dir1": "datasets/AnimeDataset/faces/",
        "data_dir2": "datasets/extra_data/images/",
        "batch_size": 128,
        "shuffle": true
    },
    "validation": {
        "validation_split": 0,
        "shuffle": true
    },
    "optimizers": {
        "generator": {
            "type": "Adam",
            "config": {
                "lr": 0.0002,
                "betas": [0.5, 0.999]
            }
        },
        "discriminator": {
            "type": "Adam",
            "config": {
                "lr": 0.0002,
                "betas": [0.5, 0.999]
            }
        }
    },
    "metrics": [
        "accuracy"
    ],
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 2,
        "verbosity": 2,
        "save_best": false
    },
    "arch": "DCGAN",
    "model": {
        "noise_dim": 100
    }
}